generator client {
  provider     = "prisma-client-js"
  moduleFormat = "cjs" // IMPORTANT for NestJS
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO_URI")
}

enum Role {
  USER
  ADMIN
}

model User {
  id                  String    @id @default(uuid()) @map("_id")
  name                String
  email               String    @unique
  password            String
  role                Role      @default(USER)
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  failedLoginAttempts Int       @default(0)
  lockUntil           DateTime?

  posts Post[]
}

model Post {
  id        String   @id @default(uuid()) @map("_id")
  title     String
  content   String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
